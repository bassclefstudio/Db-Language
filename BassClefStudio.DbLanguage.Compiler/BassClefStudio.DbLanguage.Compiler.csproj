<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Authors>BassClefStudio</Authors>
    <RepositoryUrl>https://github.com/bassclefstudio/Db-Language.git</RepositoryUrl>
    <Description>BassClefStudio.DbLanguage is an interpreted programming language that runs on top of the .NET platform. This .Compiler package adds parse and build capabilities to the BassClefStudio.DbLanguage.Core package.</Description>
    <Version>0.0.2-beta</Version>
    <PackageProjectUrl>https://github.com/bassclefstudio/Db-Language</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="JsonSubTypes" Version="1.8.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="Pidgin" Version="2.5.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BassClefStudio.DbLanguage.Core\BassClefStudio.DbLanguage.Core.csproj" />
  </ItemGroup>

</Project>
